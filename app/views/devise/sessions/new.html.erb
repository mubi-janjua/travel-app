<body style="overflow-x: hidden;">
  <div class="container" style="width: 100%;">
    <div class="row">
      <div class="col-md-12">
       <h1 class="oq" style="text-align: center;">Canada Immigration & Visa</h1>
      </div>
      </div>

      <div class="row">
        <div class="col-md-12"> <h2 style="font: italic bold 50px Georgia, serif;">Log in</h2></div>
      </div>
        <div class="row">

          <div class="col-md-4">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, class: "form-group" %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, class: "form-group" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>

          <div class="btn btn-light", style="width: 120px;">
            <%= f.button :submit, "Log in", class: "am" %>
          </div>

      <% end %>
    </div>
                <div class="col-md-8">
              <%= image_tag "canad", class: "img-fluid" %>
          </div>
        </div>
     <div class="row">
       <div class="col-md-12">
           <%= render "devise/shared/links" %>
       </div>
     </div>

  </div>
</body>
