<body style="overflow-x: hidden;">
  <div class="container">
    <div class="row">
         <h1 class="oq">Canada Immigration & Visa</h1>
      <div class="cd col-md-9">
        <%= image_tag "canad", class: "img-fluid" %>
      </div>

      <div class="wq col-md-3">
       <h2 style="font: italic bold 50px Georgia, serif;">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, class: "form-group" %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, class: "form-group" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>

          <div class="btn btn-light", style="width: 120px;">
            <%= f.button :submit, "Log in", class: "am" %>
          </div>
      </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</body>
