<body style="overflow-x: hidden;">
  <div class="container">
    <div class="row" style="margin-top: -32px;">
      <div class="col-md-3 o1">
        <%= link_to canadas_path do %>
         <%= image_tag "can1"%>
        <%end%>
      </div>
      <div class="col-md-9 o2" style="padding: 0px;">
        <%= image_tag "we", class: "mySlides img-fluid"%>
        <%= image_tag "visi", class: "mySlides img-fluid"%>
        <%= image_tag "imii", class: "mySlides img-fluid"%>
